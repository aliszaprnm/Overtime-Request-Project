@{
    Layout = "_NewRequest";
    ViewData["Email"] = @ViewBag.sessionEmail;
    ViewData["NIK"] = @ViewBag.sessionNIK;
    ViewData["FirstName"] = @ViewBag.sessionFName;
    ViewData["LastName"] = @ViewBag.sessionLName;
}

<input id="nik" style="display:none" value="@ViewData["NIK"]">
<input id="email" style="display:none" value="@ViewData["Email"]">
<input id="firstname" style="display:none" value="@ViewData["FirstName"]">
<input id="lastname" style="display:none" value="@ViewData["LastName"]">

<div class="card">
    <div class="card-body">
        <div class="card card-default">
            <div class="card-body">
                <h3 class="card-title text-center" style="color:black"><b>   Overtime Request Form</b></h3>
            </div>
            <div class="card-body">
                <form id="formovertime" action="">
                    <table width="80%">
                        <thead>
                            <tr style="display:none">
                                <th><label for="name">NIP</label></th>
                                <th><input value="" id="nik" class="form-control" name="nip"></th>
                                <th>
                            </tr>
                            <tr>
                                <th><label for="name">Overtime Name</label></th>
                                <th><input value="" id="overtimeTitle" class="form-control" name="overtimeTitle"></th>
                            </tr>
                            <tr>
                                <th><label for="subdate">Request Date</label></th>
                                <th><input class="form-control datepicker" placeholder="Select" type="text" id="date" autocomplete="off" required name="date"></th>
                            </tr>
                        </thead>
                    </table>
                </form>
                <br />
                <form>
                    <div class="row">
                        <div class="col-3">
                            <div class="form-group">
                                <label for="starttime">Start Time</label><br>
                                <input type="time" id="starttime" class="form-control" name="starttime">
                            </div>
                        </div>
                        <div class="col-3">
                            <div class="form-group">
                                <label for="endtime">End Time</label><br>
                                <input type="time" id="endtime" class="form-control" name="endtime">
                            </div>
                        </div>
                        <div class="col-4">
                            <div class="form-group">
                                <label for="task">Task Job</label><br>
                                <textarea id="task" required="required" class="form-control" name="task"></textarea>
                            </div>
                        </div>
                        <div class="col-1" style="margin-top:30px;">
                            <button type="button" class="btn btn-primary" onclick="NewRequest()">Add</button>
                        </div>
                        <div hidden>
                            <label for="addsalary">Additional Commision:</label><br>
                            <input type="text" id="commision" name="commision">
                        </div>
                        <div hidden>
                            <label for="overtimeformid">OvertimeForm Id: </label><br>
                            <input type="text" id="overtimeformid" name="overtimeformid">
                        </div>
                    </div>
                    <div id="overtimeLimit" style="color: red; font-size: 15px; display: none;">Maximum overtime per day should not be more than 3 hours!</div>
                    <div class="row" style="width:25%">
                    </div>
                </form>
                <form id="tableRequestOvertime">
                    <div class="table-responsive">
                        <div class="table-wrap">
                            <div class="container-fluid mt-3">
                                <table id="mytables" class="table table-striped table-bordered" style="width:90%">
                                    <thead>
                                        <tr>
                                            <th>No</th>
                                            <th>NIK</th>
                                            <th>Request Date</th>
                                            <th>Start Time</th>
                                            <th>End Time</th>
                                            <th>Task</th>
                                            <th>Action</th>
                                        </tr>
                                    </thead>
                                    <tbody id="bodyTableRequest"></tbody>
                                    <tfoot>
                                        <tr>
                                            <th></th>
                                            <th></th>
                                            <th></th>
                                            <th></th>
                                            <th></th>
                                            <th></th>
                                            <th></th>
                                            <th></th>
                                        </tr>
                                    </tfoot>
                                </table>
                            </div>
                            <div style="text-align:left; margin-left:23px">
                                <button type="button" class="btn btn-success" onclick="OvertimeForm()">Send</button>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>